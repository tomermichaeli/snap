<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head'); %>
</head>

<body class="container">


  <script>
    function time() {
      const now = new Date();
      // console.log(now.getTimezoneOffset())
      now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
      console.log(now.toISOString().split(".")[0])
      console.log(now.toISOString().slice(0, 16))
      document.getElementById('datetime').value = now.toISOString().slice(0, 16);
    }
    window.addEventListener('load', () => {
      console.log("loaded");
      time()
    });
  </script>


  <header>
    <%- include('../partials/header'); %>
  </header>

  <main>
    <div class="row">
      <div class="col-sm-12">
        <div class="well">
          <div class="jumbotron">
            <div class="main-container">
              <div class="update-update-container">
                <form method="post" action="/create">
                  <div><select name="topic" id="topic" class="topic" placeholder="topic" rows="1">
                    <option selected value="חדשות">חדשות</option>
                    <option value="ביטחון">ביטחון</option>
                    <option value="פוליטיקה">פוליטיקה</option>
                    <option value="כלכלה">כלכלה</option>
                    <option value="מדיני">מדיני</option>
                    <option value="חינוך">חינוך</option>
                    <option value="בריאות">בריאות</option>
                    <option value="ספורט">ספורט</option>
                  </select></div>
                  <div><input type="datetime-local" name="datetime" id="datetime"></div>
                  <div><textarea name="image" id="image" class="image" placeholder="image path..." rows="1"></textarea>
                  </div>
                  <div><textarea name="title" id="title" class="title" placeholder="title (url)" rows="1"></textarea></div>
                  <div><textarea name="heading" id="heading" class="heading" placeholder="Article Heading"></textarea>
                  </div>
                  <div><textarea name="author" id="author" class="author" placeholder="author" rows="1">חדשות ישראל</textarea>
                  </div>
                  <div><textarea name="body" id="body" class="body" placeholder="body" rows="10"></textarea></div>
                  <div><button class="sendbutton">Publish</button></div>
                </form>
              </div>
            </div>
          </div>


        </div>
      </div>
    </div>
  </main>

  <footer>
    <%- include('../partials/footer'); %>
  </footer>

</body>

</html>