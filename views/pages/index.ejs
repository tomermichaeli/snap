      console.log(now.toISOString().split(".")[0])
      console.log(now.toISOString().slice(0,16))
      document.getElementById('time').value = now.toISOString().slice(0,16);
      }
    window.addEventListener('load', () => {
      console.log("loaded");
      time()
    });
