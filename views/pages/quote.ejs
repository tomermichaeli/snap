<main>
  <div class="jumbotron">
    <!-- <h1>Posting data from HTML to Mongo</h1> -->
    <h1 class="pagetitle">Publish Breaking News Updates</h1>
<div class="main-container">
    



    <div class="new-update-container">
        <div class="old-update-container" style="background-color: aliceblue;">
            <div class="time-old-div"><span class="time-old" style="color: grey"><%= quoted.time.slice(11,16) %> @ <%= quoted.time.slice(8,10) %>/<%= quoted.time.slice(5,7) %>/<%= quoted.time.slice(0,4) %></span></div>
            <div class="headline-old-div"><span class="headline-old" ><%= quoted.headline %></span></div>
            <div><span class="body-old" ><%= quoted.body %></span></div>
            <!-- <div><textarea name="quotedid" id="quotedid"><%= quoted._id %></textarea></div> -->
            <!-- <div><span class="objectid" id="quotedid">ObjectId: <%= quoted._id %></span></div> -->
        

        <hr style="margin-bottom: 1rem;">
        </div>

        <form method="post" action="/quote">
            <div><input type="datetime-local" name="time" id="time"></div>
            <div><textarea name="headline" id="headline" class="headline" placeholder="כותרת" style="height:10rem"></textarea></div>
            <div><textarea name="body" id="body" class="body" placeholder="כותרת משנה" style="height:6rem"></textarea></div>
            <div><label class="switch">
                <input type="checkbox" checked name="tweet" id="tweet">
                <span class="slider round tweet"></span>
            </label> &nbsp;
            <label class="switch">
                <input type="checkbox" name="thread" id="thread">
                <span class="threader round"></span>
            </label></div>
            <div class="sendbutton"><button class="sendbutton">Publish</button></div>
            <div><textarea name="quotedid" id="quotedid" disabled style="font-size: 0.5rem;"><%= quoted._id %></textarea></div>
      </form>
</div>



